#!/bin/sh
# prerm script for salor-retail
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

echo "prerm called with $@"

db_get salor-retail/old-instances || true
gOldInstances="${RET}"
db_get salor-retail/current-instances || true
gInstances="${RET}"

case "$1" in
  remove)
    if [ -f /usr/share/dbconfig-common/dpkg/prerm ]; then
      for lInstance in $gOldInstances; do
        db_get salor-retail/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/prerm ; dbc_go salor-retail/instances/$lInstance remove )
        fi
      done
      for lInstance in $gInstances; do
        db_get salor-retail/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/prerm ; dbc_go salor-retail/instances/$lInstance remove )
        fi
      done
    fi
  ;;
  
  upgrade)
    echo "  prerm: Logging upgrade to version $2..."
    DATE="`date +%Y%m%dT%H%M%S`"
    echo "$DATE: Upgrade to version $2" >> /var/log/salor-retail/upgrades.txt
  ;;
  
  failed-upgrade|abort-install|abort-upgrade|disappear)
  ;;
    
  *)
      echo "prerm called with unknown argument \`$1'" >&2
      exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
